extends layout

block css
  // CSS Global Compulsory
  link(rel='stylesheet', href='/components/bootstrap/dist/css/bootstrap.min.css')
  link(rel='stylesheet', href='/css/style.css')
  // CSS Implementing Plugins
  link(rel='stylesheet', href='/components/simple-line-icons/css/simple-line-icons.css')
  link(rel='stylesheet', href='/components/font-awesome/css/font-awesome.min.css')
  link(rel='stylesheet', href='/components/cube-portfolio/cubeportfolio/css/cubeportfolio.css')
  // CSS Customization
  link(rel='stylesheet', href='/css/custom.css')

block js
  script(data-main="/admin", src="/components/requirejs/require.js")

block content
  .content(ng-app="gallery")
    .fusion-portfolio.wrapper-portfolio-no-space.cbp-5-col
      input#fileupload(type='file', name='pic', data-url='/pictures', multiple)
      #grid-container.cbp-l-grid-gallery(ng-controller="MainController as ctrl")
        ul
          li.cbp-item(ng-repeat="pictrue in ctrl.pictures")
            a.cbp-caption(href='portfolio_item.html')
              .cbp-caption-defaultWrap
                img(src='/upload/{{pictrue.fileName}}', alt='', width='100%')
              .cbp-caption-activeWrap
                .cbp-l-caption-alignCenter
                  .cbp-l-caption-body
                    .cbp-l-caption-text {{pictrue.name}}
                    p.cbp-l-caption-desc {{pictrue.createDate}}
