    #sub-cate.row.margin-bottom-20
      .col-md-3.col-sm-6
        .thumbnails.thumbnail-style.thumbnail-kenburn
          .thumbnail-img
            .overflow-hidden
              img.img-responsive(src='/img/main/1.jpg', alt='')
            a.btn-more.btn-blue.hover-effect(href='about-us') read more +
          .caption
            h3
              a.hover-effect(href='about-us') #{__('home.subCate.sub1')}
