extends ../layout

block css
  link(rel="stylesheet", href="/css/contact.css")

block js
  script(src="http://maps.google.com/maps/api/js?sensor=true")
  script(data-main="/js/contact", src="/components/requirejs/require.js")

block breadcrumbs
  .breadcrumbs
    .container
      h1.pull-left #{__('contact.breadcrumb.title')}

block content
  // Google Map
  #map.map
  .container.content(ng-app='inquiry')
    .row.margin-bottom-30(ng-controller='MainController as ctrl')
      .col-md-9.mb-margin-bottom-30
        .headline
          h2 #{__('contact.form.title')}
        p
          | #{__('contact.form.description')}
        br
        form#sky-form3.sky-form.sky-changes-3(ng-submit='ctrl.submit()', name="inquiryForm")
          fieldset
            .row
              section.col.col-6
                label.label #{__('contact.form.name')}
                label.input(ng-class='inquiryForm.name.$error.required && inquiryForm.name.$dirty ? "state-error" : ""')
                  i.icon-append.fa.fa-user
                  input#name(type='text', name='name', ng-model='ctrl.inquiry.name', required)
                em.invalid(for='name', ng-show='inquiryForm.name.$error.required && inquiryForm.name.$dirty') ご氏名を入力してください
              section.col.col-6
                label.label #{__('contact.form.email')}
                label.input(ng-class='(inquiryForm.email.$error.required || inquiryForm.email.$error.email) && inquiryForm.email.$dirty ? "state-error" : ""')
                  i.icon-append.fa.fa-envelope-o
                  input#email(type='email', name='email', ng-model='ctrl.inquiry.email', required)
                em.invalid(for='email', ng-show='inquiryForm.email.$error.required && inquiryForm.email.$dirty') メールアドレスを入力してください
                em.invalid(for='email', ng-show='inquiryForm.email.$error.email && inquiryForm.email.$dirty') 正しいフォーマットでメールアドレスを入力してください
            section
              label.label #{__('contact.form.subject')}
              label.input
                i.icon-append.fa.fa-tag
                input#subject(type='text', name='subject', ng-model='ctrl.inquiry.subject', required)
            section
              label.label #{__('contact.form.message')}
              label.textarea
                i.icon-append.fa.fa-comment
                textarea#message(rows='4', name='message', ng-model='ctrl.inquiry.message', required)
          footer
            button.btn.btn-u(type='submit', ng-disabled='inquiryForm.$invalid') #{__('contact.form.send')}
          .message
            i.rounded-x.fa.fa-check
            p #{__('contact.form.success')}

      // /col-md-9
      .col-md-3
        // Contacts
        .headline
          h2 #{__('contact.info.title')}
        ul.list-unstyled.who.margin-bottom-30
          li
            i.fa.fa-home
            | #{__('contact.info.address')}
          li
            i.fa.fa-envelope
            | info@e-business.co.jp
          li
            i.fa.fa-phone
            | 03-6809-3235
          li
            i.fa.fa-globe
            | http://www.e-business.co.jp
        // Business Hours
        .headline
          h2 #{__('contact.time.title')}
        ul.list-unstyled.margin-bottom-30
          li
            strong #{__('contact.time.workday')}
            |  9:30 〜 18:00
          //- li
          //-   strong #{__('contact.time.saturday')}
          //-   |  11am 〜 15pm
          //- li
          //-   strong #{__('contact.time.sunday')}
          //-   | #{__('contact.time.rest')}

