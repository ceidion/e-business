                      li
                        i.fa.fa-check.color-green
                        | #{__('recruitment.agreement.info5.fax')} 03-6809-3238
                      li
                        i.fa.fa-check.color-green
                        |  URL: http://www.e-business.co.jp
                      li
                        i.fa.fa-check.color-green
                        |  E-Mail: katoko@e-business.co.jp
              .modal-footer
                button.btn-u.btn-u-default(data-dismiss='modal', type='button') #{__('recruitment.agreement.disagree')}
                | 
                button#btn-download-resume.btn-u(type='button') #{__('recruitment.agreement.agree')}
