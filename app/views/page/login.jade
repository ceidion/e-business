extends ../layout

block css
  link(rel="stylesheet", href="/login.css")

block js
  script(data-main="/common", src="/components/requirejs/require.js")
    
block breadcrumbs
  .breadcrumbs
    .container
      h1.pull-left #{__('login.breadcrumb.title')}

block content
  .container.content
    .row
      .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
        form.reg-page
          .reg-header
            h2 #{__('login.form.title')}
          .input-group.margin-bottom-20
            span.input-group-addon
              i.fa.fa-user
            input.form-control(type='text', placeholder=' #{__("login.form.username")}')
          .input-group.margin-bottom-20
            span.input-group-addon
              i.fa.fa-lock
            input.form-control(type='password', placeholder=' #{__("login.form.password")}')
          .row
            .col-md-6
            .col-md-6
              button.btn-u.pull-right(type='submit') #{__('login.form.button')}
          hr
          h4 #{__('login.form.forgotPass')}
          p
            a.color-green(href='#') #{__('login.form.resetPassLink')}
            |  #{__('login.form.resetpass')}
